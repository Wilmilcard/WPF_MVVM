        <ListView Grid.Row="1" ItemsSource="{Binding ListaHeroes, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding name}" Header="Nombre" Width="auto" />
                    <GridViewColumn DisplayMemberBinding="{Binding events.available}" Header="eventos" Width="auto" />
                    <GridViewColumn DisplayMemberBinding="{Binding modified, StringFormat='{}{0:dd/MM/yyyy}'}" Header="Modificado" Width="auto" />
                    <GridViewColumn Header="Datos" Width="370">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="OpenFile" Content="link" Click="OpenFile_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
