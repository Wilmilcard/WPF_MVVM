<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:WPF_App"
    xmlns:custom_controls="clr-namespace:WPF_App.CustomControls">


    <Style TargetType="{x:Type custom_controls:LoadCustomControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type custom_controls:LoadCustomControl}">
					<materialDesign:PackIcon Kind="Loading" Width="30" Height="30">
						
					</materialDesign:PackIcon>
					<ControlTemplate.Triggers>
						<!--<Trigger Property="RotateOn" value="true">
							
						</Trigger>-->
					</ControlTemplate.Triggers>
				</ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
